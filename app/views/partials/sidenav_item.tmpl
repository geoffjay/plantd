<div
  hx-get="{{$.path}}"
  hx-trigger="click"
  hx-target="#main"
  hx-swap="outerHTML"
  class="
    flex flex-row gap-4 w-full h-10 items-center py-2 px-4 z-0
    text-slate-800 border-r-solid border-r-2 border-white
    hover:text-red-800 hover:border-red-800 hover:cursor-pointer
  "
>
  {{ if $.menu }}
    <i class="fa-solid fa-caret-right fa-sm min-w-2 drop-shadow-[0_1px_1px_rgba(30,41,59,0.3)]"></i>
  {{ else }}
    <div class="min-w-2"></div>
  {{ end }}

  {{ if $.icon }}
    <i class="fa-regular fa-{{$.icon}} fa-md min-w-6 drop-shadow-[0_1px_1px_rgba(30,41,59,0.3)]"></i>
  {{ else }}
    <div class="min-w-6"></div>
  {{ end }}

  <p class="text-md">{{$.name}}</p>
</div>
